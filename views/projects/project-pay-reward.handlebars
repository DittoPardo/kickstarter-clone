<div class="sub-container">
  <div class="row">
    <div class="panel panel-default">

      <h1 class="text-center">{{ project.project_name }}</h1>            

      <div class="panel-body">
        <form action="/projects/{{ project.id }}/rewards/{{ reward.id }}" method="POST" id="payment-form" role="form">

          <span class="payment-errors"></span>

          <div class="form-group">
            <label for="chosenAmount" class="control-label">Amount</label>
            <input
              type="number"
              class="form-control"
              id="chosenAmount"
              name="chosenAmount"
              value="{{ reward.amount }}"
              required 
              readonly />
          </div>

          <div class="form-group">
            <label for="chosenDescription" class="control-label">Description</label>
            <input
              type="string"
              class="form-control"
              id="chosenDescription"
              name="chosenDescription"
              value="{{ reward.description }}"
              required 
              readonly />
          </div>
          
          <div class="form-group">
            <label class="control-label">Card Number</label>
            <input
              type="text"
              class="form-control"
              maxlength="16"
              data-stripe="number"
              placeholder="4242 4242 4242 4242"
              autofocus
              required/>
          </div>

          <div class="row">
            <div class="col-xs-7 col-md-7">
              <div class="form-group">
                <label class="control-label">Expiration (MM/YYYY)</label>

                <div class="col-xs-5 col-lg-5 pl-ziro" style="padding-left: 0px">
                  <input
                    type="text"
                    class="form-control"
                    maxlength="2"
                    data-stripe="exp-month"
                    placeholder="MM"
                    required />
                </div>

                <div class="col-xs-7 col-lg-7 pl-ziro" style="padding-left: 0px">
                  <input 
                    type="text"
                    class="form-control"
                    maxlength="4"
                    data-stripe="exp-year"
                    placeholder="YYYY"
                    required />
                </div>

              </div>
            </div>

            <div class="col-xs-5 col-md-5 pull-right">
              <div class="form-group">
                <label class="control-label">CVC</label>
                <input
                  type="text"
                  class="form-control"
                  maxlength="3"
                  data-stripe="cvc"
                  placeholder="123"
                  required />
              </div>
            </div>
          </div>

          <div class="form-group">
            <button id="cardSubmit" type="submit" class="btn btn-info btn-block pledge-button">Submit Payment</button>
          </div>

        </form>

        <div>
          <a href="/projects/{{ project.id }}/rewards" class="">Back to rewards</a>
        </div>
      </div>
    </div>
  </div>
</div>