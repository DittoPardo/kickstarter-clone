<div class="sub-container">
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
      <form method="POST" action="#" role="form">
        <div class="form-group">
          <h2>Log in</h2>
        </div>

        <div class="form-group">
          <label class="control-label" for="signupEmail">Email</label>
          <input id="signupEmail" type="email" maxlength="50" class="form-control" placeholder="Your Email">
        </div>

        <div class="form-group">
          <label class="control-label" for="signupPassword">Password</label>
          <input id="signupPassword" type="password" maxlength="25" class="form-control" placeholder="Your password" length="40">
        </div>

        <div class="form-group">
          <a href="/forgot-password">Forgot password?</a>
        </div>

        <div class="form-group">
          <button id="signupSubmit" type="submit" class="btn btn-info btn-block pledge-button">Log me in!</button>
        </div>
        <hr>
        <p></p>New to KickstarterClone? <a href="/signup" class="auth-link ">Sign up!</a></p>
      </form>
    </div>
  </div>
</div>
</div>
