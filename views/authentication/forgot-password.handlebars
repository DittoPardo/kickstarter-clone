<div class="sub-container">
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
      <form method="POST" action="/forgot-password" role="form">
        <div class="form-group">
          <p>Enter the email address you used to sign up and we'll send you a link to reset your password.</p>
        </div>

        <div class="form-group">
          <label class="control-label" for="yourEmail">Email</label>
          <input 
            id="yourEmail"
            name="yourEmail"
            type="email"
            maxlength="50"
            class="form-control"
            placeholder="Your email"
            autocomplete="email"
            autofocus
            required />
        </div>

        <div class="form-group">
          <button id="forgotPassSubmit" type="submit" class="btn btn-info btn-block pledge-button">Continue</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
